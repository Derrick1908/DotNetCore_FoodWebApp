@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<!--Note that becoz we have used here restaurant -->

@if(Model.Message != null)
{ 
    <div class="alert alert-info">@Model.Message</div>
}

<h1>@Model.Restaurant.Name</h1>
<div>
    Id: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>

<a asp-page="./List" class="btn btn-default">All Restaurants</a>     <!--asp-page is a Tag to move to a particular Razor Page. ./ Means the Current Directory of Restaurants only-->